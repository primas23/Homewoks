@model SumNumbersASPMVC.Models.SumViewModel

<div class="col-md-12">
    @using (Html.BeginForm("Index", "Home"))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.FirstNumber)
            @Html.TextBoxFor(m => m.FirstNumber, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.SecondNumber)
            @Html.TextBoxFor(m => m.SecondNumber, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-default">Sum</button>
    }
</div>

@if (this.Model.Result != null)
{
    <div class="col-md-12">
        @Html.LabelFor(m => m.Result)
        @Html.TextBoxFor(m => m.Result, new { @class = "form-control" })
    </div>
}
